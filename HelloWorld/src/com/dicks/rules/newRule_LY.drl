rule "filter stock"
	salience 10
	auto-focus true
	agenda-group "first"
    when    	
    	$order : Orders()
    	$store : Store()
    	eval(!InventoryDAO.getInstance().containAnyProductOrder($store, $order))
    then
        retract($store);
end

