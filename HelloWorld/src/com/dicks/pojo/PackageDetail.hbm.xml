<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
        
<hibernate-mapping>
	
	<class name="com.dicks.pojo.PackageDetail" table="package">
		<composite-id>
			<key-property name="productID" column="prod_id" type="int"></key-property>
			<key-property name="packageID" column="package_id" type="int"></key-property>		
		</composite-id> 
			
		<property name="unitPrice" column="unit_price" type="int"></property>
		<property name="qty" column="qty" type="int"></property>
	</class>
</hibernate-mapping>