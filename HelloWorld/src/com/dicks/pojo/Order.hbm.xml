<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 
        
<hibernate-mapping>
	
	<class name="com.dicks.pojo.Order" table="orders">
		<id name="orderID" column="order_id" type="int">
			<generator class="increment"></generator>
		</id>
			
		<property name="customerID" column="cust_id" type="int"></property>
		<property name="totalAmount" column="tot_amt" type="int"></property>
		<property name="orderStatus" column="order_status" type="character"></property>
		<property name="orderDate" column="order_date" type="date"></property>
		<property name="address" column="shipping_addr" type="string"></property>
		<property name="zip" column="shipping_zip" type="string"></property>
		<property name="tel" column="tel_no" type="string"></property>
		<property name="customerName" column="cust_name" type="string"></property>
		
	</class>
</hibernate-mapping>